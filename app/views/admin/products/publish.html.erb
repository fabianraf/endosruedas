<% content_for :page_specific_javascript do %>
<%= javascript_include_tag "js/jquery/jquery.preimage.js" %>
<script type="text/javascript">
		
		$(document).ready(function()
				{
					if ($.cookie("tab")=="motorcycle"){
						$('#motorcicleTab').tab('show');
					}
					
				    $('#bicycleTab').click(function() {
				    	$.cookie("tab", "bicycle");
					});
				    $('#motorcicleTab').click(function() {
					    $.cookie("tab", "motorcycle");
					});
					
					// preview images
					$('.file').preimage();
					$('#previewBicycleGroup').hide();
					$('.file').change(function() {
				    	$('#previewBicycleGroup').show();
					});
					$('#previewMotorcycleGroup').hide();
					$('.file').change(function() {
				    	$('#previewMotorcycleGroup').show();
					});
				});

</script>
<% end %>

<div class="container">
		
		<ul class="nav nav-tabs" id="product">
		  <li class="active" id="bicycleLi"><a  href="#bicycle" data-toggle="tab" id="bicycleTab">Bicicleta</a></li>
		  <li id="motorcycleLi"><a href="#motorcicle" data-toggle="tab" id="motorcicleTab">Motocicleta</a></li>
		</ul>
		
		<!-- Tab panes -->
		<div class="tab-content">
		  <div class="tab-pane active" id="bicycle">
			<h2>
			  Publica tu bicicleta
			</h2>
		  
		  <%= form_for([:admin, @bicycle], :url => admin_productos_path(:producto => "bicicleta"), :html => {:class => "form-horizontal"}) do |f| %>
		    <%= render :partial => 'form_bicycle', :object => f %>
		    <div class="form-group">
			    <div class="col-sm-offset-11 col-sm-1">
				<%= f.submit "Publicar", :class => "btn btn-default"%>
		    </div>
		  </div>
		  <% end %>
		
			  
		   </div> <!--  end tab bicycle -->
		
			
		   <div class="tab-pane" id="motorcicle">
		   
		   		<h2>
				  Publica tu motocicleta
				</h2>
		   
			  <%= form_for([:admin, @motorcycle], :url => admin_productos_path(:producto => "motocicleta"), :html => {:class => "form-horizontal"}) do |f| %>
			    <%= render :partial => 'form_motorcycle', :object => f %>
			    <div class="form-group">
				    <div class="col-sm-offset-11 col-sm-1">
						<%= f.submit "Publicar", :class => "btn btn-default"%>
				    </div>
				 </div>
			  <% end %>

			</div>
		</div>
	 
</div>

