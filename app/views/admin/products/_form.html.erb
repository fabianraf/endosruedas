						<%= form.text_area :description, :class => "form-control", :placeholder => "Pon aquí información como número de velocidades, marca de freno, aros, para hombre/mujer , tamaño, cuadro, etc"%>
			    </div>
			   
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-11 col-sm-1">
						<%= form.submit "Publicar", :class => "btn btn-default"%>
			    </div>
			  </div>
