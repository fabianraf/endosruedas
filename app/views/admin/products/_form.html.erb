
			
				<div class="form-group">
					<%= form.label :title, "Título", :class => "col-sm-1 control-label"%>
			    <div class="col-sm-11">
						<%= form.text_field :title, :class => "form-control", :placeholder => "Título" %>
			    </div>
				</div>
				
			  <div class="form-group">
					<%= form.label :new, "Articulo", :class => "col-sm-1 control-label"%>
				    <div class="col-sm-3">
				      <%= form.text_field :new, :class => "form-control" %>
				    </div>
						<%= form.label :category_id, "Tipo", :class => "col-sm-1 control-label"%>
				    <div class="col-sm-3">
							<%= form.text_field :category_id, :class => "form-control" %>
				      <!-- {{ Form::select('type' , array('montañera','carrera', 'paseo', 'bici-cross', 'bmx', 'otros'), '', array('class' => 'form-control')) }} -->
				    </div>
						<%= form.label :brand_id, "Marca", :class => "col-sm-1 control-label"%>
				    <div class="col-sm-3">
							<%= form.text_field :brand_id, :class => "form-control" %>
				    
				    </div>
			  </div>
			  
			  <div class="form-group">
					<%= form.label :model_id, "Modelo", :class => "col-sm-1 control-label"%>
			    <div class="col-sm-3">
						<%= form.text_field :model_id, :class => "form-control" %>
			    </div>
					<%= form.label :year, "Año", :class => "col-sm-1 control-label"%>
			    <div class="col-sm-3">
			    		<%= form.select :year, options_for_select((Time.now.year.to_i.downto(1990)).map {|i| [i,i] }), {:prompt => "Selecciona un año"}, {:class => "form-control"}%>
			    </div>
					<%= form.label :city, "Ciudad", :class => "col-sm-1 control-label"%>
			    <div class="col-sm-3">
						<%= form.text_field :city, :class => "form-control", :placeholder => "Ciudad" %>
			    </div>
			  </div>
			  
			  
			  <div class="form-group">  
					<%= form.label :speed_id, "Velocidades", :class => "col-sm-1 control-label"%>
				    <div class="col-sm-3">
							<%= form.text_field :speed_id, :class => "form-control", :placeholder => "Reemplazar por dropdown" %>
				    </div>
						<%= form.label :amount, "Precio", :class => "col-sm-1 control-label"%>
				    <div class="col-sm-3">
							<%= form.text_field :amount, :class => "form-control", :placeholder => "Precio" %>
				    </div>

			  </div>
			  
			  <div class="form-group">  
					<%= form.label "Imagenes", :class => "col-sm-1 control-label" %>
					<% index = 1 %>
					<%= form.fields_for :bicycle_images do |bi| %>
						<%= label_tag "file#{index}", "", :class => "col-sm-1 control-label" if index > 1%>
						<div class="col-sm-3">
							<%= bi.file_field  :file, :class => "file small-height", :id => "file#{index}" %>
				      		<!-- {{ Form::file('files[picture1]', array('multiple'=>true, 'id' => 'file1', 'class'=>"file" )); }} -->
				    	</div>
						<% index += 1%>
					<% end %>
				</div>
			  <div class='hidden-phone hidden-tablet form-group ' id="previewBicycleGroup">
			  	  <% index = 1 %>
					<%= form.fields_for :bicycle_images do |bi| %>
			      		<div class="col-sm-1"></div>
			      		<div class="col-sm-3">
						  
						  <%= bi.label :div,  :id => "prev_file#{index}" %>
						</div>
						<% index += 1%>
					<% end %>
			  </div>
			  <div class="form-group">
					<%= form.label :description, "Descripción", :class => "col-sm-1 control-label"%>
