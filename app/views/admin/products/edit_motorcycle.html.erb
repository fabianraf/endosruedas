		</ul>
		
		<!-- Tab panes -->
		<div class="tab-content">
		  <div class="tab-pane active" id="motorcycle">
			<h2>
			  Publica tu motocicleta
			</h2>
		  
		  <%= form_for([:admin, @product], :url => admin_producto_path(@product), :html => {:class => "form-horizontal"}) do |f| %>
