<div class="container">
  <h2>Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
  	  <div class="col-sm-6">
  	  	<label> ¿Aún no te has resgistrado?</label>
  	      	<span>
  		      	<a class="text-white" href="/registro">
  		      	ir al Registro!
  		      	</a>
  	      	</span>
        </div>
      </div>

		  <div class="form-group">
		    <%= f.label :email, "Correo", class: "col-sm-2 control-label" %>
		    <div class="col-sm-6">
		      <%= f.email_field :email, { autofocus: true, class: "form-control", placeholder: "Correo"} %>
		    </div>
		  </div>
      
		  <div class="form-group">
        <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
		    <div class="col-sm-6">
		    	<%= f.password_field :password, {autocomplete: "off", class: "form-control", placeholder: "Clave"} %>
		    </div>
		  </div>
      
      <% if devise_mapping.rememberable? -%>
  		  <div class="form-group">
          <%= f.label :remember_me, "Recuérdame?", class: "col-sm-2 control-label" %>
  		    <div class="col-sm-6">
  		    	<%= f.check_box :remember_me %>
  		    </div>
  		  </div>
      <% end -%>
    
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-1">
	      <%= f.submit "Sign in", class: "btn btn-default" %>
	    </div>
	  </div>
    
  <% end %>

  <%= render "devise/shared/links" %>
</div>


